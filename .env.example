# Discord Bot Token
DISCORD_TOKEN=your_discord_bot_token

# Discord Application ID (Client ID)
DISCORD_CLIENT_ID=your_discord_client_id

# Discord Guild ID (optional - if empty, commands are registered globally)
DISCORD_GUILD_ID=your_guild_id

# Allowed role name (users must have this role to use commands)
ALLOWED_ROLE_NAME=Server Manager

# Vultr API Key
VULTR_API_KEY=your_vultr_api_key

# Snapshot retention count (optional, default: 3)
SNAPSHOT_RETENTION=3

# Daily reminder settings (optional)
# Time to check for running servers (HH:MM format, e.g., "12:00")
REMINDER_TIME=12:00
# Discord channel ID to send reminders (leave empty to disable)
REMINDER_CHANNEL_ID=

# SSH settings for file download (optional)
# Path to SSH private key file
SSH_PRIVATE_KEY_PATH=/home/user/.ssh/id_rsa

# File server settings (optional - required for file download feature)
# Port for the file server
FILE_SERVER_PORT=8080
# Base URL for file downloads (e.g., https://example.com/files)
FILE_SERVER_BASE_URL=
# Directory to store downloaded files
FILE_DOWNLOAD_DIR=/home/user/vultr-discord-bot/downloads
# Number of downloaded files to retain per server/file (default: 3)
FILE_RETENTION=3
