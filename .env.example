# Discord Bot Token
DISCORD_TOKEN=your_discord_bot_token

# Discord Application ID (Client ID)
DISCORD_CLIENT_ID=your_discord_client_id

# Discord Guild ID (optional - if empty, commands are registered globally)
DISCORD_GUILD_ID=your_guild_id

# Allowed role name (users must have this role to use commands)
ALLOWED_ROLE_NAME=Server Manager

# Vultr API Key
VULTR_API_KEY=your_vultr_api_key

# Snapshot retention count (optional, default: 3)
SNAPSHOT_RETENTION=3
